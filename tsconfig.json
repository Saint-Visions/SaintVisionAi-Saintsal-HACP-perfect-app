{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "module": "esnext",
    "moduleResolution": "node",  // Ensure the node module resolution strategy is used
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",  // Base path for module resolution
    "paths": {
      "@/*": [
        "client/*",        // For paths like '@/components/ComponentName'
        "./*"              // Ensure root-level resolution works
      ],
      "@app/*": [
        "app/*"            // Aliasing app folder
      ],
      "@components/*": [
        "components/*",    // Aliasing components
        "client/components/*"
      ],
      "@hooks/*": [
        "client/hooks/*"   // Aliasing hooks
      ],
      "@lib/*": [
        "client/lib/*"     // Aliasing lib
      ],
      "@pages/*": [
        "client/pages/*"   // Aliasing pages
      ],
      "@styles/*": [
        "client/styles/*"  // Aliasing styles
      ],
      "@ui/*": [
        "client/components/ui/*"  // Aliasing UI components
      ],
      "@shared/*": [
        "shared/*"         // Shared folder (if needed)
      ],
      "@server/*": [
        "server/*"         // Server-side code
      ],
      "@public/*": [
        "public/*"         // Public assets
      ],
      "@supabase/*": [
        "client/lib/supabase/*"  // Aliasing supabase files
      ],
      "@env/*": [
        "client/env/*"           // Environment-specific files
      ]
    },
    "plugins": [
      {
        "name": "next"  // Make sure the next.js plugin is included
      }
    ],
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",               // Include TypeScript files
    "**/*.tsx",              // Include TypeScript JSX files
    ".next/types/**/*.ts",   // Include types generated by Next.js
    "app/**/*",              // Include app directory
    "client/**/*",           // Include client directory
    "next-env.d.ts",         // Include Next.js env types
    "server/**/*",           // Include server-side code
    "shared/**/*",           // Include shared utilities or components
    "out/types/**/*.ts"      // Include generated types
  ],
  "exclude": [
    "node_modules",          // Exclude node_modules directory
    "dist",                  // Exclude build output
    ".next"                  // Exclude Next.js build output
  ]
}
